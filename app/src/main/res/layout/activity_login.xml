<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="@android:color/white"
    android:layout_height="match_parent"
    tools:context=".CustomerLogin">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:elevation="20dp"
        android:layout_marginBottom="20dp">

        <ImageView
            android:backgroundTint="@android:color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/redblack"
            android:layout_centerVertical="true"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="200dp"
            android:layout_centerVertical="true"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:textSize="30sp"
            android:fontFamily="@font/montserrat_bold"
            android:text="WELCOME BACK!"/>

        <ImageView
            android:layout_alignParentEnd="true"
            android:layout_width="120dp"
            android:layout_centerVertical="true"
            android:layout_height="120dp"
            android:src="@mipmap/dra"
            android:layout_gravity="center" />

    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LOGIN HERE SIMPLY!"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        android:fontFamily="@font/montserrat_bold"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="10dp" />

    <ss.anoop.awesometextinputlayout.AwesomeTextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:borderColor="@android:color/black"
        app:borderWidth="0.8dp"
        android:layout_marginTop="10dp"
        app:cornerRadius="5dp">

        <EditText
            android:layout_gravity="center"
            android:textSize="17sp"
            android:id="@+id/emailEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Email"
            android:textColor="@android:color/black"
            android:textColorHint="@android:color/black"/>

    </ss.anoop.awesometextinputlayout.AwesomeTextInputLayout>

    <ss.anoop.awesometextinputlayout.AwesomeTextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:borderColor="@android:color/black"
        app:borderWidth="0.8dp"
        app:cornerRadius="5dp"
        android:layout_marginTop="20dp">

        <EditText
            android:textSize="17sp"
            android:textColor="@android:color/black"
            android:id="@+id/passwordEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Password"
            android:textColorHint="@android:color/black"/>

    </ss.anoop.awesometextinputlayout.AwesomeTextInputLayout>

    <Button
        android:id="@+id/login_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:textColor="@android:color/white"
        android:background="@drawable/roundbtn"
        android:text="Login"/>

    <TextView
        android:id="@+id/signup_prompt"
        android:textColor="@android:color/black"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="No Account? Create Here"
        android:textAlignment="center"
        android:layout_marginTop="30dp" />

    <TextView
        android:id="@+id/forgot_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:text="Forgot Password?"
        android:textAlignment="center"
        android:layout_marginTop="10dp"/>

</LinearLayout>