<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#fafafa"
    android:layout_height="match_parent"
    tools:context=".UserProfileActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        android:background="#212121"
        android:paddingLeft="32dp"
        android:paddingTop="32dp"
        android:paddingBottom="32dp"
        android:id="@+id/heading"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:src="@drawable/back"
            android:id="@+id/back"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Account Details"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/back"
            android:textSize="16sp"
            android:textColor="#fafafa"
            android:layout_marginTop="16dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        android:paddingLeft="32dp"
        android:paddingTop="32dp"
        android:paddingBottom="32dp"
        android:paddingRight="32dp"
        app:layout_constraintTop_toBottomOf="@id/heading">

        <ImageView
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:background="#909090"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/user_image"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/username_heading"
            android:text="UserName"
            android:textSize="12sp"
            android:textColor="#909090"
            android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@id/user_image"
            app:layout_constraintLeft_toLeftOf="parent"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/username"
            android:text="UserName"
            android:textSize="16sp"
            android:textColor="#212121"
            android:layout_marginTop="2dp"
            app:layout_constraintTop_toBottomOf="@id/username_heading"
            app:layout_constraintLeft_toLeftOf="parent"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/phonenumber_heading"
            android:text="Phone Number"
            android:textSize="12sp"
            android:textColor="#909090"
            android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@id/username"
            app:layout_constraintLeft_toLeftOf="parent"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/phoneNo"
            android:text="Phone Number"
            android:textSize="16sp"
            android:textColor="#212121"
            android:layout_marginTop="2dp"
            app:layout_constraintTop_toBottomOf="@id/phonenumber_heading"
            app:layout_constraintLeft_toLeftOf="parent"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/email_heading"
            android:text="Email"
            android:textSize="12sp"
            android:textColor="#909090"
            android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@id/phoneNo"
            app:layout_constraintLeft_toLeftOf="parent"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/email"
            android:text="Email"
            android:textSize="16sp"
            android:textColor="#212121"
            android:layout_marginTop="2dp"
            app:layout_constraintTop_toBottomOf="@id/email_heading"
            app:layout_constraintLeft_toLeftOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>