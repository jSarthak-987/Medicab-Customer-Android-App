<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:background="@color/mast"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="24dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/nav_profile_image"
        android:layout_width="56dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_height="56dp"
        android:layout_marginStart="16dp"
        android:src="@mipmap/avatar_dummy" />

    <TextView
        android:maxLines="1"
        android:id="@+id/nav_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins"
        app:layout_constraintLeft_toLeftOf="@id/nav_profile_image"
        app:layout_constraintTop_toBottomOf="@id/nav_profile_image"
        android:layout_marginTop="16dp"
        android:textColor="#fff"
        android:textSize="14sp" />

    <TextView
        android:maxLines="1"
        android:id="@+id/nav_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins"
        app:layout_constraintLeft_toLeftOf="@id/nav_profile_image"
        app:layout_constraintTop_toBottomOf="@id/nav_name"
        android:textColor="#e0e0e0"
        android:textSize="12sp" />

</androidx.constraintlayout.widget.ConstraintLayout>